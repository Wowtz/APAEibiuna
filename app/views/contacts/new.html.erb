<%= render 'form', contact: @contact %>
<div class="contato">
  <div class="faleconosco">
    <div class="conttitulo">
      <h1>Fale Conosco</h1>
    </div>
    <div class="contform">
      <%= form_for @contact do |f| %>
        <%= f.label :nome, class: "labelnome" %> <br>
        <%= f.text_field :name, required: true, class: "box" %> <br>

        <%= f.label :email, class: "labelnome" %> <br>
        <%= f.text_field :email, required: true, class: "box"  %> <br>

        <%= f.label :mensagem, class: "labelnome" %> <br>
        <%= f.text_area :message, as: :text, required: true, class: "boxtext"  %> <br>

        <%= f.submit "Enviar Mensagem", class: "button" %> <br>
      <% end %>
    </div>
  </div>
  
  <div class="contendereco">
